<?xml version='1.0'?>
<sdf version="1.4">
  <model name="ping_pong_ball">
    <pose>0.6 0 1.25  0 0 0</pose>
    <static>false</static>
    <link name="body">
      <visual name='visual'>
        <geometry>
          <mesh>
            <uri>file://models/ping_pong_ball/meshes/ball.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name="collision">
        <geometry>
          <sphere>
            <radius>0.02</radius>
          </sphere>
        </geometry>
        <surface>
          <bounce>
            <restitution_coefficient>1</restitution_coefficient>
            <threshold>0</threshold>
          </bounce>
          <friction>
            <ode>
              <mu>0.01</mu>
              <mu2>0.01</mu2>
            </ode>
          </friction>
          <contact>
            <ode>
              <max_vel>1000</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
    </link>
  </model>
</sdf>
